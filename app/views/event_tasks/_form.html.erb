<%= form_for([@event, event_task]) do |form| %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">                                                 
    <%= form.label :child_id %>
    <%= form.collection_select :child_id, Child.all, :id, :full_name, include_blank: true %>
  </div>

  <div class="field">   
    <%= form.label :caregiver_id %>
    <%= form.collection_select :caregiver_id, Caregiver.all, :id, :full_name, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label "Pick-up date and time" %>
    <%= form.datetime_select :start_time %>
  </div>

  <div class="field"> 
    <%= form.label "Pick-up address" %>
    <%= form.text_field :pickup_address %>
  </div>

  <div class="field">
    <%= form.label "Drop-off date and time" %>
    <%= form.datetime_select :end_time %>
  </div>
    
  <div class="field"> 
    <%= form.label "Drop-off address" %>
    <%= form.text_field :dropoff_address %>
  </div>

  <div class="field">
    <%= form.label :priority %>
    <%= form.radio_button :priority, 'High' %> High<br />
    <%= form.radio_button :priority, 'Medium' %> Medium<br />
    <%= form.radio_button :priority, 'Low' %> Low<br />
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, options_for_select([['Not Assigned'], ['Assigned'], 
                                                            ['Cancelled'], ['Completed']]) %>
  </div>

  <div class="field"> 
    <%= form.label :event_id %>
    <%= form.collection_select :event_id, Event.all, :id, :name, include_blank: false %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
