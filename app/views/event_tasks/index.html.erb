<h1>Event Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Event date and time</th>
      <th>Event address</th>
      <th>Child</th>
      <th>Caregiver</th>
      <th>Pick-up date</th>
      <th>Pick-up time</th>
      <th>Pick-up address</th>
      <th>Drop-off date</th>
      <th>Drop-off time</th>
      <th>Drop-off address</th>
      <th>Priority</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_tasks.each do |event_task| %>
      <tr>
        <td><%= event_task.event.name %></td>
        <td><%= event_task.event.start_time.strftime(("%d %b (%a) %l:%M %p")) %></td>
        <td><%= event_task.event.address.name %></td>
        <td><%= event_task.child.full_name %></td>
        <td><%= event_task.caregiver.full_name %></td>
        <td><%= event_task.start_time.strftime(("%d %b (%a)")) %></td>
        <td><%= event_task.start_time.strftime(("%l:%M %p")) %></td>
        <td><%= event_task.pickup_address %></td>
        <td><%= event_task.end_time.strftime(("%d %b (%a)")) %></td>
        <td><%= event_task.end_time.strftime(("%l:%M %p")) %></td>
        <td><%= event_task.dropoff_address %></td>
        <td><%= event_task.priority %></td>
        <td><%= event_task.status %></td>
        <td><%= link_to 'Show', event_task %></td>
        <td><%= link_to 'Edit', edit_event_task_path(event_task) %></td>
        <td><%= link_to 'Destroy', event_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'All Events', events_path %> |
<%= link_to 'New Event', new_event_path %> |
<%= link_to 'Children', children_path %> |
<%= link_to 'Caregivers', caregivers_path %> |
<%= link_to 'Addresses', addresses_path %> 
