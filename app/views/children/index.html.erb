<h1>Children</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">First name</th>
      <th scope="col">Last name</th>
      <th scope="col">Address</th>
      <th scope="col">Phone</th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>


  <tbody>
    <% @children.each do |child| %>
      <tr>
        <td><%= child.first_name %></td>
        <td><%= child.last_name %></td>
        <td><%= child.address.name %></td>
        <td><%= child.phone %></td>
        <td><%= link_to 'Show', child, class: "btn btn-outline-secondary btn-sm btn-block" %></td>
        <td><%= link_to 'Edit', edit_child_path(child), class: "btn btn-outline-secondary btn-sm btn-block" %></td>
        <td><%= link_to 'Destroy', child, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-secondary btn-sm btn-block" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

